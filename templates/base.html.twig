<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Scrawler</title>
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,500&amp;subset=latin-ext">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway:300,500&amp;subset=latin-ext">
</head>
<body>
<header>
    <nav>
        <ul>
            {% set route = app.request.get('_route') %}
            <li><a href="{{ url('index') }}" {% if route == 'index' %}class="active"{% endif %}>Home</a> <span>/</span></li>
            <li class="dropdown">
                <span class="dropdown-header {% if route == 'docs' or route == 'root_docs' %}active{% endif %}">Docs</span> <span>/</span>
                <ul>
                    <li><a href="{{ url('docs', {file: 'getting-started'}) }}">Getting started</a></li>
                    <li><a href="{{ url('docs', {file: 'configuration'}) }}">Configuration</a></li>
                    <li><a href="{{ url('docs', {file: 'entities'}) }}">Entities</a></li>
                    <li><a href="{{ url('docs', {file: 'blocks'}) }}">Blocks</a></li>
                    <li><a href="{{ url('docs', {file: 'cookbook'}) }}">Cookbook</a></li>
                    <li><a href="{{ url('root_docs', {file: 'changelog'}) }}">Changelog</a></li>
                </ul>
            </li>
            <li><a href="https://github.com/Sobak/scrawler">GitHub</a></li>
        </ul>
    </nav>
    <h1><a href="{{ url('index') }}"><span class="em">S</span>obak's <span class="em">crawler</span></a></h1>
</header>

<main class="container">
    {% block content %}{% endblock %}
</main>

<footer class="footer">
    Created by <a href="http://sobak.pl">Sobak</a>
    <span class="separator">/</span>
    Check the <a href="https://github.com/Sobak/scrawler">source code</a>
</footer>

</body>
</html>
